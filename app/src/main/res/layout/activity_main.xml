<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spreadsheetUrl"
        android:hint="Enter SpreadSheet Url"
        android:layout_margin="25dp"/>

    <EditText
        android:id="@+id/sheetname"
        android:layout_below="@id/spreadsheetUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Sheet name"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_below="@id/sheetname"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="launch"
        android:id="@+id/launch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/launch"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="25dp"
        android:id="@+id/current"/>

</RelativeLayout>